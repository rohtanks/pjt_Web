<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.test.mapper.MemberMapper">

	<select id="getTime" resultType="String">
	select now()
	</select>

	<insert id="insertMember">
	insert into t_member (
		userid,
		userpw,
		username,
		email
	) values (
		#{userid},
		#{userpw},
		#{username},
		#{email}
	)
	</insert>
	
	<select id="readMember" resultType="com.test.domain.MemberVO">
	select *
	  from t_member
	 where userid = #{userid}
	</select>
	
	<select id="readWithPW" parameterType="HashMap" resultType="com.test.domain.MemberVO">
	select *
	  from t_member
	 where userid = #{userid}
	   and userpw = #{userpw}
	</select>
</mapper>